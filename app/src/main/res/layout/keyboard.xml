<?xml version="1.0" encoding="utf-8"?>
<android.inputmethodservice.KeyboardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/keyboardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"


    android:focusable="true"
    android:focusableInTouchMode="true"
    android:keyPreviewOffset="12dp"
    android:visibility="visible"

    android:popupLayout="@layout/popup_layout"
    android:layout_alignParentBottom="true"
    android:background="@color/cream_white"
    android:keyBackground="@drawable/samplekeybackground"
    android:keyTextSize="17dp"
    android:keyPreviewHeight="50dp"
    android:keyPreviewLayout="@layout/preview"
    android:keyTextColor="@color/key_color"
    android:shadowColor="@color/cream_white"/>